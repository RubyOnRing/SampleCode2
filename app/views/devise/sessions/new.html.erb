<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card-group">
        <div class="card p-4">
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <h1>Login</h1>
              <p class="text-muted">Sign In to your account</p>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <svg class="c-icon">
                      <use xlink:href="<%= asset_path('@coreui/icons/sprites/free.svg') %>#cil-user"></use>
                    </svg>
                  </span>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",
                                  class: "form-control" %>
              </div>

              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <svg class="c-icon">
                      <use xlink:href="<%= asset_path('@coreui/icons/sprites/free.svg') %>#cil-lock-locked"></use>
                    </svg>
                  </span>
                </div>
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",
                                     class: "form-control" %>
              </div>

              <div class="row">
                <div class="col-6">
                  <%= f.submit "Login", class: 'btn btn-primary px-4' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
